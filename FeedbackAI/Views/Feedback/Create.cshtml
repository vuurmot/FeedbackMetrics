@model Feedback
@{
    ViewData["Title"] = "Add feedback";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <div class="container">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Emotion" value=1 checked>
                    <label class="form-check-label" asp-for="Emotion">
                        <img height="64px" width="64px" src="~/images/angry.webp"></img>
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Emotion" value=2 checked>
                    <label class="form-check-label" asp-for="Emotion">
                        <img height="64px" width="64px" src="~/images/happy.webp"></img>
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Emotion" value=3 checked>
                    <label class="form-check-label" asp-for="Emotion">
                        <img height="64px" width="64px" src="~/images/neutral.webp"></img>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Description">Feedback</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>